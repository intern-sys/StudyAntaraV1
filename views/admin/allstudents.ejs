<% include ../partials/header %>

<div class="container" style="margin-top:2rem">
<table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="th-sm">Full Name
        <i class="fa fa-sort float-right" aria-hidden="true"></i>
      </th>
      <th class="th-sm">Mobile Number
        <i class="fa fa-sort float-right" aria-hidden="true"></i>
      </th>
      <th class="th-sm">Email
        <i class="fa fa-sort float-right" aria-hidden="true"></i>
      </th>
      <th class="th-sm">Edit/Delete
        <i class="fa fa-sort float-right" aria-hidden="true"></i>
      </th>

    </tr>
  </thead>
  <tbody>
            <% for(var i=0; i<data.length; i++) {%>
            <tr>
              <td><%= data[i].fullName %></td>
              <td><%= data[i].mobileNumber %></td>
              <td> <%= data[i].email %></td>
              <td>
                <form action="/admin/<%= data[i]._id%>/student/edit" method = "get">
                  <button type="submit" class="btn btn-warning btn-sm">
                    Edit
                  </button>
                </form>
                <form action="/admin/<%= data[i]._id%>/student/delete" method = "get">
                  <button type="submit" class="btn btn-danger btn-sm">
                    Delete
                  </button>
                </form>
              </td>
           </tr>
          <% } %>
  </tbody>
</table>
  </div>
</div>

<script>
 $(document).ready(function () {
  $('#dtBasicExample').DataTable();
  $('.dataTables_length').addClass('bs-select');
});
</script>

<% include ../partials/footer %>
